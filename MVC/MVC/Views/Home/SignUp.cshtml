@model MVC.Models.UserAccount


<link rel="stylesheet" type="text/css" href="~/css/CreateNewAccount.css" />
@*<script type="text/javascript" src="~/js/CreateNewAccount.js"></script>*@
<script type="text/javascript">

function submitStudent()
{
    var c =$("#CNAForm").serialize();
        alert(c);
    $.ajax
    ({
        
        datatype: "json",
        type: "POST",
        url: "/Home/CreateNewAccount",
        data:c,
        //data: '{Id:"0",FirstName:"' + $("#TxtFName").val().trim() + '",LastName:"' + $("#TxtLName").val().trim() + '",ContactNo:"' + $("#TxtContactNo").val().trim() + '",EmailId:"' + $("#TxtEmailId").val().trim() + '",Password:"' + $("#TxtPassword").val().trim() + '",Gender:"' + $("#DDL_Gender").val() + '"}',
        contentType: "application/charset=UTF-8",
        success: function (response)
        {            
            if (response.success = "success")
            {
                alert("data Inserted Successfully");
                $("input").val("");
                $("DDL_Gender").val("M");
            }
        },
        error: function ()
        {
            alert("Unexpected error is occured sorry for incovinience..!!!")
        }
    });
}
</Script>
<div class="row">
    <div class="col-sm-offset-3 col-md-offset-4 col-lg-offset-4 col-xs-12 col-sm-6 col-md-4 col-lg-4" id="CNAForm">
        <center><h4><i class="fa fa-users"></i> Create New Accout</h4><hr /></center>
        <div class="form-group">
            <span>First Name:</span><br />
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input id="TxtFName" type="text" placeholder="Enter First Name Here.." maxlength="20" class="form-control" />
            </div>
            <small id="TxtFNameValidate" class="text-danger"></small>
        </div>
        <div class="form-group">
            <span>Last Name:</span><br />
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input id="TxtLName" type="text" placeholder="Enter Last Name Here.." maxlength="20" class="form-control" />
            </div>
            <small id="TxtLNameValidate" class="text-danger"></small>
        </div>
        <div class="form-group">
            <span><i class="fa fa-phone"></i> Contact No.:</span><br />
            <div class="input-group">
                <span class="input-group-addon">+91- </span>
                <input id="TxtContactNo" type="text" placeholder="Enter Contact No. Here.." maxlength="10" class="form-control" />
            </div>
            <small id="TxtContactNoValidate" class="text-danger"></small>
        </div>
        <div class="form-group">
            <span>Email Id:</span><br />
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <input id="TxtEmailId" type="text" placeholder="Enter Email Id Here.." maxlength="50" class="form-control" />
            </div>
            <small id="TxtEmailIdValidate" class="text-danger"></small>
        </div>
        <div class="form-group">
            <span>Password:</span><br />
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                <input id="TxtPassword" type="password" placeholder="Enter Password Here.." maxlength="15" class="form-control" />
            </div>
            <small id="TxtPasswordValidate" class="text-danger"></small>
        </div>
        <div class="form-group">
            <span>Gender:</span><br />
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-male"></i> | <i class="fa fa-female"></i></span>
                <select id="DDL_Gender" class="form-control">
                    <option value='M'>Male</option>
                    <option value='F'>Female</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <a class="btn btn-primary" onclick="submitStudent()"><i class="fa fa-user-plus" style="color:#FFFFFF;"></i> submit</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

